{
  "name": "auraudit",
  "version": "1.0.0",
  "description": "Autonomous coding audit framework with AI-powered code analysis",
  "scripts": {
    "dev": "cd Auto-Claude/auto-claude-ui && npm run dev",
    "build": "cd Auto-Claude/auto-claude-ui && npm run build:web",
    "preview": "cd Auto-Claude/auto-claude-ui && npm run preview:web",
    "test": "cd Auto-Claude && python -m pytest tests/ -v",
    "test:ui": "cd Auto-Claude/auto-claude-ui && npm test",
    "lint": "cd Auto-Claude/auto-claude-ui && npm run lint",
    "lint:fix": "cd Auto-Claude/auto-claude-ui && npm run lint:fix",
    "type-check": "cd Auto-Claude/auto-claude-ui && npm run typecheck",
    "start": "npm run dev"
  },
  "keywords": ["audit", "code-analysis", "ai", "automation", "claude"],
  "author": "MelroseSaint",
  "license": "AGPL-3.0"
}
